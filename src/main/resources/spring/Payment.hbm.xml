<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.ayushi.loan.Payment" table="payment" polymorphism="implicit">

        <id name="paymentId" type="java.lang.Long">
            <column name="PAYMENT_ID" />
            <generator class="assigned" />
        </id>

        <discriminator>
            <column name="DISCRIMINATOR" />
        </discriminator>

        <property name="paymentFrequency" type="java.lang.String">
            <column name="PAYMENT_TYPE"  not-null="true" />
        </property>

        <property name="paymentStartDate" type="java.util.Date">
            <column name="PAYMENT_START_DATE" not-null="true" />
        </property>
        <property name="paymentEndDate" type="java.util.Date">
            <column name="PAYMENT_END_DATE" not-null="true"/>
        </property>
        <property name="paymentAmount" type="java.lang.Double">
            <column name="PAYMENT_AMOUNT"  not-null="true" />
        </property>
        <property name="paymentFrequency" type="java.lang.String">
            <column name="PAYMENT_FREQUENCY" length="300" not-null="true" />
        </property>
        <property name="balanceAmount" type="java.lang.Double">
            <column name="BALANCE_AMOUNT"   />
        </property>

        <subclass name="com.ayushi.loan.PayPalPayment" discriminator-value="PP">
            <property name="payPalAccountNumber" column="PAYPAL_ACCOUNT_NUMBER"/>
            <property name="payPalEmailAddress" column="PAYPAL_EMAIL_ADDRESS"/>
            <property name="payPalAuthPersonName" column="PAYPAL_AUTH_PERSON_NAME"/>
            <property name="payPalPassword" column="PAYPAL_PASSWORD"/>
        </subclass>

    </class>
</hibernate-mapping>
